    </flow>
    <flow name="get:\dailyMenu:cocktailsandfood-api-config">
        <flow-ref doc:name="dailyMenu" doc:id="07ca8d3a-6708-4b2c-b091-405f00ef6a9a" name="dailyMenu" />
        <error-handler ref="VALIDATION_DAYLIMENU" />
    </flow>
    <flow name="get:\theBestCoctail:cocktailsandfood-api-config">
        <flow-ref doc:name="theBestCocktail" doc:id="d529413f-f8dd-48ec-ae1e-757e6b3b68e5" name="theBestCocktails" />
    </flow>
    <flow name="get:\listOfIngredient:cocktailsandfood-api-config">
		<flow-ref doc:name="listOfCocktails" doc:id="3e9f8d69-490f-4425-b079-0a45b562ace9" name="listOfIngredient"/>
    </flow>
    <flow name="get:\searchByIngred:cocktailsandfood-api-config">
		<flow-ref doc:name="searchByIngredient" doc:id="ddcb6c19-48fe-4235-ab1e-2c94263f4caa" name="searchByIngredient"/>
		<error-handler ref="VALIDATION_SEARCH_INGRIDIENT" />
    </flow>
</mule>
