    </flow>
    <flow name="get:\listOfCategory:cocktailsandfood-api-config">
        <flow-ref doc:name="listOfCategoryCoctails" doc:id="19230195-4e23-4d4a-ba28-6dc1e8181c74" name="listOfCategory" />
    </flow>
    <flow name="get:\listOfCocktails:cocktailsandfood-api-config">
        <flow-ref doc:name="listOfAllCocktails" doc:id="00369a3b-fc58-485f-adcb-6d4216d743d7" name="listOfAllCocktails" />
    </flow>
    <flow name="get:\randomThree:cocktailsandfood-api-config">
